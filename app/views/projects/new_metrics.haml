%h1 Editing Project Config

= form_tag update_metric_path, :method => :post do
  %div{:class => "panel panel-default"}
    %div.panel-heading
      %label
        = "Basic Info"
    %div.panel-body
      .input-group
        .input-group-addon
          = "Project Name:"
        %input{:type => "text", :name => "info[name]", :class => "form-control", :value => @project_name}
      .input-group
        .input-group-addon
          = "Project Owner:"
        %input{:type => "text", :name => "info[owner]", :class => "form-control"}
  %div{:class => "panel panel-default"}
    %div.panel-heading
      %label
        = "Monitered Metrics"
    %div.panel-body
      - @metrics.each do |metric_name|
        %h4
          = metric_name
        - @needed_params.each do |param_name|
          .input-group
            .input-group-addon
              = param_name + ":"
            %input{:type => "text", :name => "metrics[#{metric_name}][#{param_name}]", :class => "form-control"}
  = submit_tag "Finish", class: "btn btn-primary"
  = link_to 'Back', projects_path, class: "btn btn-primary"